{{#each this}}
    <tr id="line_table_{{id}}">
        <td>{{inc @index}}</td>
        <td style="word-break:break-all; word-wrap:break-word;">
            {{#each condition}}
                {{#if @index}}并且{{/if}}
                {{#ifCond type '==' '1'}}
                    {{field.name}}{{relation relation}}{{value}}
                {{/ifCond}}
                {{#ifCond type '==' '2'}}
                    申请人职位{{relation relation}}{{#each positions}}{{#if @index}},
                {{/if}}{{name}}{{/each}}
                {{/ifCond}}
                {{#ifCond type '==' '3'}}
                    申请人部门{{relation relation}}({{#each organizations}}{{#if @index}},
                {{/if}}{{name}}{{/each}})
                {{/ifCond}}
                {{#ifCond type '==' '4'}}
                    申请人{{relation relation}}({{#each users}}{{#if @index}},
                {{/if}}{{name}}{{/each}})
                {{/ifCond}}
            {{/each}}
        </td>
        <td><a data-type="text" class="weight" href="#" data-id="{{id}}">{{weight}}</a>

        </td>
        <td>
            <!--<button class="btn btn-sm btn-system act-edit" data-id="{{id}}"><i class="fa fa-edit"></i></button>-->
            <button class="btn btn-sm btn-warning act-remove" data-id="{{id}}"><i class="fa fa-times"></i></button>
        </td>
    </tr>
{{else}}
    <tr>
        <td colspan="4">
            <div class="alert alert-default alert-dismissable m30">
                <p>暂无条件，请点击新增按钮添加条件</p>
            </div>
        </td>
    </tr>
{{/each}}