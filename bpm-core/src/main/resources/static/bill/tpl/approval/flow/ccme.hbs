<div class="content-box">
    <!--切换内容区域-->
    <section class="g-contanier">
        <div class="ui-panels">
            <div class="ui-panel ext-pad" id="ccme-data-div">
                <div class="ui-panel-title ext-nmb ext-brB">抄送我的
                    <div class="u-fr u-button-group">
                        <button class="layui-btn layui-btn-normal layui-btn-small"
                                id="ccme-apply-btn"><i class="layui-icon">&#xe642;</i>发起审批
                        </button>
                    </div>
                </div>
                <div class="ui-panel-hd m-t-sm m-b-none">
                    <form class="layui-form layui-form-pane panel-search" action="">
                        <div class="layui-form-item m-b-none">
                            <div class="layui-inline m-r-xxs">
                                <label class="layui-form-label">开始时间</label>
                                <div class="layui-input-block">
                                    <div id="ccme-start-time"></div>
                                </div>
                            </div>
                            <div class="layui-inline m-r-xxs">
                                <label class="layui-form-label">结束时间</label>
                                <div class="layui-input-block">
                                    <div id="ccme-end-time"></div>
                                </div>
                            </div>
                            <div class="layui-inline m-r-xxs">
                                <label class="layui-form-label">审批类型</label>
                                <div class="layui-input-block">
                                    <div id="ccme-process-types"></div>
                                </div>
                            </div>
                            <div class="layui-inline m-r-xxs">
                                <label class="layui-form-label">审批状态</label>
                                <div class="layui-input-block">
                                    <div id="ccme-flow-status"></div>
                                </div>
                            </div>
                            <div class="layui-inline m-r-xxs">
                                <label class="layui-form-label"
                                       for="ccme-employee-select">发起人</label>
                                <div class="layui-input-block">
                                    <select id="ccme-employee-select" class="w150">
                                        <option value="-1">全部</option>
                                    </select>
                                </div>
                            </div>
                            <div class="layui-inline">
                                <button type="button" class="layui-btn layui-btn-small"
                                        id="ccme-search">查询
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
                <table id="toa_bill_ccme_tb" lay-filter="ccmeTb"></table>
            </div>
        </div>
    </section>
</div>

<script type="text/html" id="laytpl_ccme_time">
        {{ layui.laytpl.timeFormat(d.startTime) }}
</script>

<script type="text/html" id="laytpl_ccme_dateline">
        {{ layui.laytpl.timeFormat(d.dateline) }}
</script>
<script type="text/html" id="laytool_ccme_action">
    <a href="javascript:void(0)" lay-event="detail" class="layui-btn layui-btn-mini">详情</a>
</script>

<script type="text/html" id="laytool_ccme_title">
<div class="currsor-pointer" lay-event="detail">
{{#  if(d.readFlag){ }}
    <span class="ui-btn-disabled">已读</span>
{{# } else { }}
    <span class="ui-btn-warning">未读</span>
{{#  } }}
{{d.title}}
</div>
</script>

<script type="text/html" id="laytool_ccme_code">
    <div class="currsor-pointer" lay-event="detail">
        {{d.code}}
    </div>
</script>